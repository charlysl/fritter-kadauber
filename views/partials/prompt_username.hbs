 <!-- Username Prompt -->
<h2>Who could this be?</h2>
<div class="row">

  <div class="col-md-6">
    <p>If you already have an account, log in here.</p>
    <form>
    <div class="form-group" id="username-login-prompt-group">
      <label for="username-prompt-input">Username</label>
      <input type="text" class="form-control" id="username-login-prompt-input" placeholder="Username">
      <span class="help-block" id="user-not-found-prompt-message">Username not found.</span>
    </div>
    <div class="form-group" id="password-login-prompt-group">
      <label for="username-prompt-input">Password</label>
      <input type="password" class="form-control" id="password-login-prompt-input" placeholder="Password">
      <span class="help-block" id="invalid-login-prompt-message">Username and password do not match.</span>
      <span class="help-block" id="login-error-prompt-message">Something went wrong with your login. Try again.</span>
    </div>
    <div class="form-group">
    <button type="button" class="btn btn-default" id="login-prompt-btn">Login</button>
    </div>
    </form>
  </div>

  <div class="col-md-6">
    <p>Register a new account and start Freeting!</p>
    <form>
    <div class="form-group" id="username-prompt-register-group">
      <label for="username-prompt-register-input">Choose your Username</label>
      <input type="text" class="form-control" id="username-prompt-register-input" placeholder="Enter your new username">
      <span class="help-block" id="non-unique-user-prompt-message">Username not unique.</span>
    </div>
    <div class="form-group" id="password-prompt-register-group">
      <label for="password-prompt-register-input">Choose your Password</label>
      <input type="password" class="form-control" id="password-prompt-register-input" placeholder="Enter your new password">
    </div>
    <div class="form-group" id="password-prompt-check-register-group">
      <label for="password-prompt-check-register-input">Check Password</label>
      <input type="password" class="form-control" id="password-prompt-check-register-input" placeholder="Enter your password again">
      <span class="help-block" id="non-matching-passwords-prompt-message">Passwords do not match.</span>
    </div>
    <div class="form-group">
    <button type="button" class="btn btn-default" id="register-prompt-btn">Register</button>
    </div>
    </form>
  </div>

</div>