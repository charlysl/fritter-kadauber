<!-- Username Prompt -->
<h2>Who could this be?</h2>
<div class="row">
  <div class="col-md-6">
    <p>If you already have an account, log in here.</p>
    <div class="form-group">
      <label for="username-prompt-input">Username</label>
      <input type="text" class="form-control" id="username-login-prompt-input" placeholder="Username">
    </div>
    <div class="form-group">
      <label for="username-prompt-input">Password</label>
      <input type="password" class="form-control" id="password-login-prompt-input" placeholder="Password">
    </div>
  </div>
  <div class="col-md-6">
    <p>Register a new account and start Freeting!</p>
    <div class="form-group">
      <label for="username-prompt-register-input">Choose your Username</label>
      <input type="text" class="form-control" id="username-prompt-register-input" placeholder="Enter your new username">
    </div>
    <div class="form-group">
      <label for="password-prompt-register-input">Choose your Password</label>
      <input type="password" class="form-control" id="password-prompt-register-input" placeholder="Enter your new password">
    </div>
    <div class="form-group">
      <label for="password-prompt-check-register-input">Check Password</label>
      <input type="password" class="form-control" id="password-prompt-check-register-input" placeholder="Enter your password again">
    </div>
  </div>
</div>