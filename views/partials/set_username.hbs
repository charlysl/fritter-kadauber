
<!-- Modal -->
<div class="modal fade" id="change-username-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">

      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Manage Account</h4>
      </div>

      <div class="modal-body">
        <div class="row">

          <div class="col-md-6">
            <h3>Login</h3>
            <div class="form-group" id="username-group">
              <label for="newUsername">Username</label>
              <input type="text" class="form-control" id="username-input" placeholder="Username">
            </div>
            <div class="form-group" id="password-group">
              <label for="newPassword">Password</label>
              <input type="password" class="form-control" id="password-input" placeholder="Password">
              <span class="help-block" id="invalid-login-message">Username and password do not match.</span>
              <span class="help-block" id="already-logged-in-message">You're already logged in.</span>
              <span class="help-block" id="login-error-message">Something went wrong with your login. Try again.</span>
            </div>
            <button type="button" class="btn btn-default" id="login-btn">Login</button>
          </div>

          <div class="col-md-6">
            <h3>Register a new account</h3>
            <div class="form-group" id="username-register-group">
              <label for="username-register-input">Choose your Username</label>
              <input type="text" class="form-control" id="username-register-input" placeholder="Enter your new username">
              <span class="help-block" id="non-unique-user-message">Username not unique.</span>
            </div>
            <div class="form-group" id="password-register-group">
              <label for="password-register-input">Choose your Password</label>
              <input type="password" class="form-control" id="password-register-input" placeholder="Enter your new password">
            </div>
            <div class="form-group" id="password-check-register-group">
              <label for="password-check-register-input">Check Password</label>
              <input type="password" class="form-control" id="password-check-register-input" placeholder="Enter your password again">
              <span class="help-block" id="non-matching-passwords-message">Passwords do not match.</span>
            </div>
            <button type="button" class="btn btn-default" id="register-btn">Register</button>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>